{
    "name": "JustIn Time",
    "manifest_version": 2,
    "description": "Extension tracks amount of time user spends on each website per week",
    "version": "1.0.0",
    "icons": { "128": "icon_128.png"},
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["popup.js"]
        }
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs"
    ]
}