{
    "name": "JustIn Time",
    "manifest_version": 2,
    "description": "This Chrome extension tracks the amount of time a user spends on each website they visit.",
    "version": "1.0.0",
    "icons": { "128": "icon_128.png"},
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["popup.js"]
        }
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage", 
        "tabs",
        "webNavigation"
    ]
}